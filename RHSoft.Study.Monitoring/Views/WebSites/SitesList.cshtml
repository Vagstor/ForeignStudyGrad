@{
    ViewData["Title"] = "SitesList";
}
@model SitesViewModel
@using DataModels

<table class="table table-striped">
    <tr>
        <td>Сайт</td>
        <td>Статус сайта</td>
        <td></td>
        <td></td>
    </tr>

    @for (int i = 0; i < Model.Sites.Count; i++)
    {
    <tr>
        <td>@Html.ActionLink(@Model.Sites.ElementAt(i).Url, "Details", new { id = Model.Sites[i].Id })</td>
        @if ((Model.Sites[i].LastStatus < 400) && (Model.Sites[i].LastStatus >= 100))
        {
            <td><img src="https://upload.wikimedia.org/wikipedia/en/thumb/f/fb/Yes_check.svg/35px-Yes_check.svg.png" alt="" border=3 height=20 width=20 /></td>
        }
        else if ((Model.Sites[i].LastStatus >= 400) || (Model.Sites[i].LastStatus == -1))
        {
            <td><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5f/Red_X.svg/1024px-Red_X.svg.png" alt="" border=3 height=20 width=20 /></td>
        }
        else if (Model.Sites[i].LastStatus == 0)
        {
            <td><img src="https://ui-ex.com/images/circle-transparent-yellow.png" alt="" border=3 height=20 width=20 /></td>
        }
        <td>@Html.ActionLink("Редактировать", "EditSite", new { id = Model.Sites[i].Id })</td>
        <td>@Html.ActionLink("Обновить", "UpdateSiteState", new { id = Model.Sites[i].Id })</td>
    </tr>
    }
</table>