<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/sytecss.css" />
    <link rel="stylesheet" href="~/css/stylebutton.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="~/js/scriptbutton.js"></script>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (@User.Identity.Name == null)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Welcome" asp-action="Login">ForeignStudyGrad</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="MainMenu" asp-action="Index">ForeignStudyGrad</a>
                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @if (@User.Identity.Name != null)
                        {
                            <li class="nav-item" text-align=center>
                                <a class="nav-link text-dark" asp-area="" asp-controller="MainMenu" asp-action="AllCourses">Записаться на курс</a>
                            </li>

                            <li class="nav-item" text-align=center>
                                <a class="nav-link text-dark" asp-area="" asp-controller="MainMenu" asp-action="Dictionary">Словарь</a>
                            </li>

                            <li class="nav-item" text-align=center>
                                <a class="nav-link text-dark" asp-area="" asp-controller="MainMenu" asp-action="Timetable">Расписание</a>
                            </li>


                            <li class="navbar-brand" text-align=center>Добро пожаловать, @User.Identity.Name! </li>
                            <li>
                                <a class="nav-link text-dark" asp-action="Logout" asp-controller="Welcome">Выйти</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <a id="back2Top" title="Back to top" href="#">&#10148;</a>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ForeignStudyGrad - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
