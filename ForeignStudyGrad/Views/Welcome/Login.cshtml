@model LoginViewModel
@{
    ViewData["Title"] = "ForeignStudyGrad";
}
<link href="~/css/LoginStyle.css" rel="stylesheet" type="text/css" />
<div class="logincontainer">
    <div class="addinfobox">
        <p>Нет учетной записи? <a asp-action="Register" asp-controller="Welcome">Зарегистрируйтесь здесь</a></p>
        @if (@User.Identity.Name != null)
        { <p>Уже вошли? <a asp-controller="MainMenu" asp-action="Index">Перейти на домашнюю страницу</a></p>}
    </div>
    <form asp-action="login" method="post">
        <label>Имя пользователя или e-mail:</label>
        <input  type="text" asp-for="user.Login" placeholder="Введите логин или e-mail">
        <span asp-validation-for="user.Login"></span><br>
        <label>Пароль: </label>
        <input type="password" asp-for="user.Password" placeholder="Пароль">
        <span asp-validation-for="user.Password"></span><br>
        <button type="submit" class="btn btn-primary" asp-controller="Welcome" asp-action="Login">Подтвердить</button>
    </form>
</div>